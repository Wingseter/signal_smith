# Application
APP_NAME=signal_smith
APP_ENV=development
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/signal_smith
DATABASE_SYNC_URL=postgresql://postgres:postgres@localhost:5432/signal_smith

# Redis
REDIS_URL=redis://localhost:6379/0

# Korea Investment Securities API (한국투자증권)
KIS_APP_KEY=your-kis-app-key
KIS_APP_SECRET=your-kis-app-secret
KIS_ACCOUNT_NUMBER=your-account-number
KIS_ACCOUNT_PRODUCT_CODE=01
KIS_BASE_URL=https://openapi.koreainvestment.com:9443
KIS_WS_URL=ws://ops.koreainvestment.com:21000

# Kiwoom Securities API (키움증권)
KIWOOM_USER_ID=your-kiwoom-user-id
KIWOOM_USER_PASSWORD=your-kiwoom-password
KIWOOM_CERT_PASSWORD=your-cert-password

# DART API (금융감독원 전자공시)
DART_API_KEY=your-dart-api-key

# OpenAI (ChatGPT)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic (Claude)
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-opus-20240229

# Google (Gemini)
GOOGLE_API_KEY=your-google-api-key
GEMINI_MODEL=gemini-pro

# News API
NEWS_API_KEY=your-news-api-key

# Notification
SLACK_WEBHOOK_URL=your-slack-webhook-url
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# Trading Settings
TRADING_ENABLED=false
MAX_POSITION_SIZE=1000000
STOP_LOSS_PERCENT=3.0
TAKE_PROFIT_PERCENT=5.0
