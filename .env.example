# Application
APP_NAME=signal_smith
APP_ENV=development
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/signal_smith
DATABASE_SYNC_URL=postgresql://postgres:postgres@localhost:5432/signal_smith

# Redis
REDIS_URL=redis://localhost:6379/0

# ===========================================
# 키움증권 API (한국투자증권 Open API 사용)
# ===========================================
# 키움증권 Open API는 한국투자증권 KIS Developers API를 사용합니다.
# https://apiportal.koreainvestment.com 에서 발급
#
# 모의투자용 URL: https://openapivts.koreainvestment.com:29443
# 실전투자용 URL: https://openapi.koreainvestment.com:9443

KIS_APP_KEY=your-app-key
KIS_APP_SECRET=your-app-secret
KIS_ACCOUNT_NUMBER=your-account-number
KIS_ACCOUNT_PRODUCT_CODE=01

# 모의투자 사용시 아래 URL 사용
KIS_BASE_URL=https://openapivts.koreainvestment.com:29443
KIS_WS_URL=ws://ops.koreainvestment.com:31000

# 실전투자 사용시 아래 URL로 변경
# KIS_BASE_URL=https://openapi.koreainvestment.com:9443
# KIS_WS_URL=ws://ops.koreainvestment.com:21000

# 모의투자 모드 (true: 모의투자, false: 실전투자)
IS_PAPER_TRADING=true

# ===========================================
# DART API (금융감독원 전자공시)
# ===========================================
# https://opendart.fss.or.kr 에서 발급
DART_API_KEY=your-dart-api-key

# ===========================================
# AI API Keys
# ===========================================

# OpenAI (ChatGPT) - 퀀트 분석용
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic (Claude) - 펀더멘털 분석용
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-opus-20240229

# Google (Gemini) - 뉴스 분석용
GOOGLE_API_KEY=your-google-api-key
GEMINI_MODEL=gemini-pro

# ===========================================
# 뉴스 및 알림
# ===========================================
NEWS_API_KEY=your-news-api-key

# Slack 알림
SLACK_WEBHOOK_URL=your-slack-webhook-url

# Telegram 알림
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# ===========================================
# 거래 설정
# ===========================================
# 자동매매 활성화 여부 (안전을 위해 기본값 false)
TRADING_ENABLED=false

# 최대 포지션 크기 (원)
MAX_POSITION_SIZE=1000000

# 손절 비율 (%)
STOP_LOSS_PERCENT=3.0

# 익절 비율 (%)
TAKE_PROFIT_PERCENT=5.0
